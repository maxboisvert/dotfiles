#!/bin/bash

# umask 0002

function prependToPath {
	export PATH=$1:$PATH
}

function java8 {
	export JAVA_HOME="/backedUpFiles/soft/jdk/jdk1.8"
	prependToPath $JAVA_HOME/bin
}

function maven3 {
	export MAVEN_OPTS="-Xmx3g"
	export M2_HOME="/backedUpFiles/soft/apache-maven/apache-maven"
	export M2_REPO="/backedUpFiles/soft/apache-maven-repository"
	prependToPath $M2_HOME/bin
}

# java8
# maven3

export PAGER=less

export VISUAL="vim"
export EDITOR="$VISUAL"
export SVN_EDITOR="$VISUAL"
export GIT_EDITOR="$VISUAL"

HISTSIZE=10000

prependToPath $(ls -d ~/boisvertm-bin/* | tr '\n' ':')

# https://github.com/junegunn/fzf
# [ -f ~/.fzf.bash ] && source ~/.fzf.bash
export FZF_DEFAULT_COMMAND='ag -g ""'

bind 'set bell-style none'

# aliases

alias ura='gfop && bundle install && bundle exec rake db:migrate db:test:prepare'

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../../'

alias vim=nvim

export PROMPT_COMMAND='echo -ne "\033]0; ${PWD##*/} \007"'

source ~/.git-completion.bash

DEV=Development

export GOPATH=$HOME/Development/Go
export GOROOT=/usr/local/opt/go/libexec
export PATH=$PATH:$GOPATH/bin
export PATH=$PATH:$GOROOT/bin

# Docker
alias docker_env="eval \"$(docker-machine env default)\""

docker_env

